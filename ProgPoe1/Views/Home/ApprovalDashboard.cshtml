@model List<Claim>

<!-- Approval Dashboard Section -->
<div class="container my-5">
    <div class="card shadow-lg p-4">
        <h2 class="h4 mb-4 text-center text-primary">Approval Dashboard</h2>

        <!-- Table displaying submitted claims -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="bg-light text-dark">
                    <th>Lecturer Name</th>
                    <th>Hourly Rate (ZAR)</th>
                    <th>Hours Worked</th>
                    <th>Total Amount (ZAR)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Claim 1 -->
                <tr>
                    <td>John Doe</td>
                    <td>R50.00</td>
                    <td>20</td>
                    <td>R1000.00</td>
                    <td>
                        <span class="badge bg-warning text-dark">Submitted</span>
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-success">Approve</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">Reject</a>
                    </td>
                </tr>
                <!-- Example Claim 2 -->
                <tr>
                    <td>Jane Smith</td>
                    <td>R60.00</td>
                    <td>15</td>
                    <td>R900.00</td>
                    <td>
                        <span class="badge bg-success">Approved</span>
                    </td>
                    <td></td>
                </tr>
                <!-- Example Claim 3 -->
                <tr>
                    <td>Emily Johnson</td>
                    <td>R55.00</td>
                    <td>18</td>
                    <td>R990.00</td>
                    <td>
                        <span class="badge bg-danger">Rejected</span>
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

