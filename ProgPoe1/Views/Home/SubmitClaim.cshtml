@model Claim

<!-- Submit Claim Section -->
<div class="container my-5">
    <div class="card shadow-lg p-4">
        <h2 class="h4 mb-4 text-center text-primary">Submit Your Monthly Claim</h2>
        <!-- Form for submitting claims -->
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="form-group mb-4">
                <label for="lecturerName" class="form-label">Lecturer Name:</label>
                <input type="text" asp-for="LecturerName" class="form-control form-control-lg" id="lecturerName" placeholder="Enter your name" required />
            </div>
            <div class="form-group mb-4">
                <label for="hourlyRate" class="form-label">Hourly Rate (ZAR):</label>
                <input type="number" asp-for="HourlyRate" class="form-control form-control-lg" id="hourlyRate" step="0.01" placeholder="Enter your hourly rate" required />
            </div>
            <div class="form-group mb-4">
                <label for="hoursWorked" class="form-label">Total Hours Worked:</label>
                <input type="number" asp-for="HoursWorked" class="form-control form-control-lg" id="hoursWorked" placeholder="Enter total hours worked" required />
            </div>
            <div class="form-group mb-4">
                <label for="supportingDocument" class="form-label">Supporting Document:</label>
                <input type="file" name="supportingDocument" class="form-control-file" id="supportingDocument" />
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Submit Claim</button>
        </form>
    </div>
</div>

