@model Claim

<!-- Submit Claim Section -->
<div class="container my-5">
    <div class="card shadow-sm p-4">
        <h2 class="h4 mb-3">Submit Your Monthly Claim</h2>
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="lecturerName" class="form-label">Lecturer Name:</label>
                <input type="text" asp-for="LecturerName" class="form-control" id="lecturerName" required />
            </div>
            <div class="form-group mb-3">
                <label for="hourlyRate" class="form-label">Hourly Rate:</label>
                <input type="number" asp-for="HourlyRate" class="form-control" id="hourlyRate" step="0.01" required />
            </div>
            <div class="form-group mb-3">
                <label for="hoursWorked" class="form-label">Total Hours Worked:</label>
                <input type="number" asp-for="HoursWorked" class="form-control" id="hoursWorked" required />
            </div>
            <div class="form-group mb-4">
                <label for="supportingDocument" class="form-label">Supporting Document:</label>
                <input type="file" name="supportingDocument" class="form-control-file" id="supportingDocument" />
            </div>
            <div class="text-end">
                <input type="submit" value="Submit Claim" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
